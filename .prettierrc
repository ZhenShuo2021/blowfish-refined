{
	"singleQuote": false,
	"tabWidth": 4,
	"useTabs": true,
	"semi": true,
	"trailingComma": "all",
	"proseWrap": "always",
	"plugins": [
		"prettier-plugin-go-template",
		"@awmottaz/prettier-plugin-void-html"
	],
	"overrides": [
		{
			"files": ["*.html"],
			"options": {
				"useTabs": true,
				"parser": "go-template",
				"goTemplateBracketSpacing": true,
				"printWidth": 112,
				"bracketSameLine": true
			}
		},
		{
			"files": ["*.js", "*.mjs", "*.mts", "*.ts"],
			"options": {
				"semi": true,
				"useTabs": true,
				"printWidth": 112,
				"singleQuote": false
			}
		},
		{
			"files": ["*.yml", "*.yaml"],
			"options": {
				"tabWidth": 2,
				"singleQuote": false
			}
		},
		{
			"files": ["*.json*"],
			"options": {
				"trailingComma": "none"
			}
		}
	]
}
